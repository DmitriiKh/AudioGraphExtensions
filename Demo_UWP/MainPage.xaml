<Page
    x:Class="Demo_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Demo_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="SourceButton" Content="Source" Height="54" Margin="96,88,0,0" VerticalAlignment="Top" Width="221" Click="SourceButton_ClickAsync"/>
        <Button x:Name="TargetButton" Content="Target" Height="50" Margin="96,213,0,0" VerticalAlignment="Top" Width="221" Click="TargetButton_ClickAsync"/>
        <Button x:Name="RunButton" Content="Run" Height="54" Margin="96,342,0,0" VerticalAlignment="Top" Width="221" Click="RunButton_Click"/>
        <TextBlock x:Name="Source" HorizontalAlignment="Left" Height="54" Margin="408,88,0,0" Text="Choose file" TextWrapping="Wrap" VerticalAlignment="Top" Width="996"/>
        <TextBlock x:Name="Target" HorizontalAlignment="Left" Height="54" Margin="408,213,0,0" Text="Choose file" TextWrapping="Wrap" VerticalAlignment="Top" Width="996"/>
        <TextBlock x:Name="State" HorizontalAlignment="Left" Height="54" Margin="408,343,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="996"/>

    </Grid>
</Page>
